@{
    ViewData["Title"] = "Dropdown Table";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <table class="table table-selectable table-vcenter text-nowrap table-input">
                <thead>
                    <tr>
                        <th>Chọn</th>
                        <th>Nhóm hàng</th>
                        <th>Hàng hóa</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th>Tùy chọn 1</th>
                        <th>Tùy chọn 2</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="form-check-input">
                        </td>
                        <td>
                            <input class="form-control form-table" style="min-width:100px" type="text" autocomplete="off">
                        </td>
                        <td>
                            <select name="" id="" class="form-select form-table">
                                <option value="1">Hàng hóa 1</option>
                                <option value="2">Hàng hóa 2</option>
                                <option value="3">Hàng hóa 3</option>
                                <option value="4">Hàng hóa 4</option>
                                <option value="5">Hàng hóa 5</option>
                            </select>
                        </td>
                        <td>
                            <textarea name="" id="" class="form-control form-table" rows="1" autocomplete="off"></textarea>
                        </td>
                        <td>
                            <input class="form-control form-table" style="min-width:100px" type="text" autocomplete="off">
                        </td>
                        <td>
                            <input class="form-control form-table" style="min-width:100px" type="text" autocomplete="off">
                        </td>
                        <td class="text-center">
                            <div class="row gx-1 justify-content-center m-1" role="group" aria-label="Basic outlined example">
                                <div class="col-auto">
                                    <button class="btn btn-icon btn-outline-primary" data-bs-toggle="tooltip" data-bs-placement="left" title="Sửa">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                            <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" />
                                            <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" />
                                            <path d="M16 5l3 3" />
                                        </svg>
                                    </button>
                                </div>
                                <div class="col-auto">
                                    <button class="btn btn-icon btn-outline-danger btn-remove-bn" data-bs-toggle="tooltip" data-bs-placement="right" title="Thay đổi trạng thái">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                            <path d="M4 7l16 0" />
                                            <path d="M10 11l0 6" />
                                            <path d="M14 11l0 6" />
                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            <span class="dropdown">
                                <a href="#" class="link-secondary" data-bs-toggle="dropdown" aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-menu-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <path d="M4 6l16 0" />
                                        <path d="M4 12l16 0" />
                                        <path d="M4 18l16 0" />
                                    </svg>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                    <button class="dropdown-item btn-lich-su text-azure">Lịch sử điều trị</button>
                                    <button class="dropdown-item btn-chuyen-khu text-blue">Chuyển đơn vị điều trị</button>
                                    <button class="dropdown-item btn-print-pdt text-success">Xuất phiếu điều trị</button>
                                    <button class="dropdown-item btn-quanlybacsi text-cyan">Quản lý bác sĩ</button>
                                    <button class="dropdown-item btn-quanlybenhan text-dark">Quản lý bệnh án</button>
                                    <button class="dropdown-item btn-ket-thuc text-warning">Kết thúc điều trị</button>
                                    <button class="dropdown-item btn-remove-bn text-danger d-none">Xoá bệnh nhân</button>
                                </div>
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        table thead tr th {
            text-align: center;
            vertical-align: middle;
        }
    </style>
}