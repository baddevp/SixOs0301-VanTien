            padding: 20px;
            border: 1px solid #ccc;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

            .header .left {
                text-align: left;
                flex: 1;
            }

            .header .right {
                text-align: right;
                flex: 1;
            }

            .header h3 {
                margin: 0;
                font-size: 16px;
            }

            .header p {
                margin: 0;
            }

        .form-title {
            text-align: center;
            margin: 20px 0;
        }

            .form-title h1 {
                font-size: 20px;
                margin: 0;
            }

            .form-title p {
                font-style: italic;
                font-size: 12px;
                margin: 5px 0 0;
            }

        .personal-info {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            flex-direction: row-reverse;
        }

            .personal-info .photo-box {
                width: 4cm;
                height: 6cm;
                border: 1px solid #000;
                text-align: center;
                padding: 5px;
                font-size: 12px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                margin-right: 20px;
            }

            .personal-info .details {
                flex: 1;
            }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
        }

            .form-group label {
                flex-shrink: 0;
                margin-right: 5px;
            }

            .form-group .form-input-line {
                flex-grow: 1;
                height: 20px;
                border: none;
                border-bottom: 1px dotted #000;
                resize: none;
                overflow: hidden;
                outline: none;
                font-family: inherit;
            }

        .section {
            margin-top: 20px;
        }

        .section-header {
            font-weight: bold;
            text-transform: uppercase;
        }

        .question-group {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }

            .question-group table {
                width: 50%;
                border-collapse: collapse;
            }

                .question-group table th,
                .question-group table td {
                    border: 1px solid black;
                    padding: 5px;
                    text-align: left;
                }

                .question-group table th {
                    text-align: center;
                    font-weight: normal;
                }

                .question-group table td:first-child {
                    width: 70%;
                }

        .exam-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            .exam-table th {
                border: 1px solid black;
                padding: 8px;
                text-align: left;
                vertical-align: top;
            }

            .exam-table td {
                border-left: 1px solid black;
                border-right: 1px solid black;
                padding: 8px;
                text-align: left;
                vertical-align: top;
            }

            .exam-table tr:last-of-type td {
                border-bottom: 1px solid black;
            }

            .exam-table tr td:nth-child(2) {
                vertical-align: bottom;
                text-align: center;
            }

                .exam-table tr td:nth-child(2) input {
                    margin-bottom: 17px;
                }

        .signature-section {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            margin-top: 40px;
        }

            .signature-section .date-info {
                text-align: right;
                margin-bottom: 20px;
            }

            .signature-section .signer-info {
                text-align: center;
            }

        .signature-line {
            display: inline-block;
            width: 50px;
            border-bottom: 1px solid #000;
        }

        .label-with-line {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 5px;
        }

        .eye-exam-details {
            margin-top: 5px;
            line-height: 2.0;
        }

            .eye-exam-details p {
                margin: 0;
                display: flex;
                align-items: center;
            }

                .eye-exam-details p span {
                    flex-shrink: 0;
                    margin-right: 5px;
                }

                .eye-exam-details p input {
                    flex-grow: 1;
                    border: none;
                    border-bottom: 1px dashed #000;
                    height: 20px;
                }

                .eye-exam-details p.inline-group {
                    display: flex;
                    gap: 20px;
                    flex-wrap: wrap;
                }

        .color-vision-section {
            display: flex;
            flex-direction: column;
            gap: 5px;
            margin-top: 10px;
        }

            .color-vision-section .row {
                display: flex;
                align-items: center;
                gap: 10px;
            }



        .final-conclusion-box {
            border-top: 1px solid black;
            padding-top: 20px;
            margin-top: 20px;
        }

            .final-conclusion-box .info-line {
                display: flex;
                align-items: center;
                margin-bottom: 5px;
            }

                .final-conclusion-box .info-line span {
                    flex-shrink: 0;
                }

        textarea {
            resize: vertical;
        }

        .form-dot {
            height: 22px;
            border: none;
            background-color: white;
            border-bottom: 1px dotted #000;
            flex-grow: 1;
            outline: none;
            min-width: 0;
            padding-left: 0.25rem;
        }

        input.form-dot {
            font-weight: 600;
            color: #343a40;
        }

        .question-group table td:nth-child(2),
        .question-group table td:nth-child(3) {
            text-align: center;
        }
    </style>
}
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const textareas = document.querySelectorAll('.autoresize');
            textareas.forEach(textarea => {
                textarea.addEventListener('input', function() {
                    this.style.height = '22px';
                    this.style.height = this.scrollHeight + 'px';
                });
            });
        });
    </script>
}